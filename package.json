{
  "name": "colloc-chain-smart-contracts",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "compile": "truffle compile",
    "console": "truffle develop",
    "deploy:besu": "truffle migrate --network besu --reset",
    "lint": "solhint -f table contracts/**/*.sol",
    "prettier": "prettier --write ./**/*.{sol,js}",
    "test": "truffle test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.2.0",
    "@truffle/hdwallet-provider": "^1.2.0",
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.1",
    "solc": "0.6.2",
    "truffle": "^5.1.46"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.58",
    "solhint": "^3.2.1",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle-assertions": "^0.9.2"
  },
  "lint-staged": {
    "*.{sol,js}": [
      "yarn lint",
      "yarn prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
